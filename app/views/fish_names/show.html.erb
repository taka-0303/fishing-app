<div>
  <h1>
    <%= @fish_name.fish_kind %>
  </h1>
  <div>
    <%= @total.to_i %>
  </div>
  <div>
    <%= @max_size %>
  </div>
  <div>
    <%= link_to 'ホームに戻る', root_path %>
  </div>
</div>

<div>
  <%= link_to "釣果情報を登録する", new_fish_name_fish_info_path(@fish_name.id), method: :get %>
</div>

<div>
  <h3>釣果情報</h3>
  <ul>
    <% @fish_infos.each do | fish | %>
        <ul class="more_list">
          <% if user_signed_in? && current_user.id == @fish_name.user_id %>
            <li>
              <%= link_to '編集', edit_fish_name_fish_info_path(@fish_name.id, fish), method: :get %>
            </li>
            <li>
              <%= link_to '削除', fish_name_fish_info_path(@fish_name.id, fish), method: :delete %>
            </li>
          <% end %>
        </ul>
      <table>
        <tbody>
          <tr>
            <th>日付</th>
            <td> <%= fish.day %></td>
          </tr>
          <tr>
            <th colspan="2">
              <%= image_tag fish.image, size: '200x200'%>
            </th>
          </tr>
          <tr>
            <th>最大サイズ</th>
            <td><%= fish.fish_size %></td>
          </tr>
          <tr>
            <th>釣れた数</th>
            <td><%= fish.fish_num %></td>
          </tr>
          <tr>
            <th colspan="2">MEMO</th>
          </tr>
          <tr>
            <td colspan="2"><%= fish.memo %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </ul>
</div>
